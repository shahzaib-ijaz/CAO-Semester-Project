int reading=15;
int led=4;
void setup(){
  Serial.begin(9600);
  pinMode(reading,INPUT);
  pinMode(led,OUTPUT);
}
void loop(){
  int myreading=digitalRead(reading);
  if(myreading==HIGH){
    Serial.println("detected");
    digitalWrite(led,HIGH); //turns on the LED lights
    delay(10000);
    digitalWrite(led,LOW); //turns the LED lights off
    delay(2000);
  }
}
